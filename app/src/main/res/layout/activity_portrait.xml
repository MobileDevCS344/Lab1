<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yangm89.myfirstapplication.MainActivity">

    <HorizontalScrollView
        android:id="@+id/cardContScroll"
        android:layout_width="368dp"
        android:layout_height="299dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="192dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.333">

        <LinearLayout
            android:id="@+id/cardCont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/card1" />

            <EditText
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/card2"
                tools:layout_editor_absoluteX="-240dp"
                tools:layout_editor_absoluteY="224dp" />

            <EditText
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/card3"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="167dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/cardPlayedHeaderCont"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/p1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/player1"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/p2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:text="@string/player2"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardPlayedCont"
        android:layout_width="200dp"
        android:layout_height="133dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardPlayedHeaderCont" android:layout_marginStart="16dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text|textMultiLine"
            android:singleLine="false"
            android:text="@string/p1card" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text|textMultiLine"
            android:text="@string/p2card" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/scoreTable"
        android:layout_width="152dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/p1ScoreLabel"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="@string/player1" />

            <TextView
                android:id="@+id/p1Score"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="@string/p1Score" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p2ScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player2" />

            <TextView
                android:id="@+id/p2Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p1Score" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/cardRemainingTable"
        android:layout_width="152dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p1CountLabel"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/player1" />

            <TextView
                android:id="@+id/p1Count"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="@string/p1Score" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p2CountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player2" />

            <TextView
                android:id="@+id/p2Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p1Score" />
        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/cardRemain"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/remaining"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardRemainingTable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTable"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/scoreLabel"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/score"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scoreTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
